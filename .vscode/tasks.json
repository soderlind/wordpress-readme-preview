{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: compile",
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "shared",
				"reveal": "silent"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "npm: watch",
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "shared",
				"reveal": "never"
			},
			"problemMatcher": [
				{
					"base": "$tsc-watch",
					"background": {
						"activeOnStart": true,
						"beginsPattern": {
							"regexp": "(\\s*)\\$tsc(\\s|.)*"
						},
						"endsPattern": {
							"regexp": "Found \\d+ errors?\\. Watching for file changes\\."
						}
					}
				}
			]
		}
	]
}